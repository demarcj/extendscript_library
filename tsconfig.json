{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "noEmit": true,           

    "strict": true,
    "skipLibCheck": true,

    "lib": ["ES5"],
    "downlevelIteration": false,
    "noEmitHelpers": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "index.ts",
    "library/**/*.d.ts"
  ]
}
